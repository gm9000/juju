<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.juju.app.view.SwipeLayout
        android:id="@+id/swipe"
        app:drag_edge="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_back"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="65.0dip">
            <TextView
                android:id="@+id/txt_operate"
                style="@style/MMFontTitleInList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:singleLine="true" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/plan_info_layout"
            style="@style/MMListItem"
            android:layout_height="80dp"
            android:background="@drawable/setting_item_selector"
            android:paddingLeft="5dip">
            <TextView
                android:id="@+id/txt_time"
                style="@style/BlackTxt14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="2015-12-12 09:00"
                android:textSize="14sp"
                android:singleLine="true" />
            <TextView
                android:id="@+id/txt_address"
                style="@style/BlackTxt14"
                android:layout_below="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="百里山水画廊"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:textSize="14sp"
                android:singleLine="true" />
            <ImageView
                android:id="@+id/img_selected"
                android:layout_below="@+id/txt_address"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:src="@mipmap/selected"
                android:visibility="gone" />
            <!--<TextView-->
                <!--android:id="@+id/txt_tag_selected"-->
                <!--style="@style/TagTxt"-->
                <!--android:layout_below="@+id/txt_address"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/selected"-->
                <!--android:visibility="visible"-->
                <!--android:singleLine="true" />-->
            <LinearLayout
                android:id="@+id/layout_plan_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/location"/>
                    <TextView
                        android:id="@+id/txt_distance"
                        style="@style/GrayTxt12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/un_tag"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/right"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_tag_signed"
                        style="@style/TagTxt"
                        android:layout_below="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/signed"
                        android:visibility="gone"
                        android:singleLine="true" />
                    <TextView
                        android:id="@+id/txt_attend_num"
                        style="@style/GrayTxt12"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        style="@style/GrayTxt12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/attended"/>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.juju.app.view.SwipeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black2" />
</LinearLayout>