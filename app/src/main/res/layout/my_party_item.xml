<?xml version="1.0" encoding="utf-8"?>
<com.juju.app.view.SwipeLayoutView
    xmlns:swipe="com.juju.app.view.SwipeLayoutView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:id="@+id/layout_back"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:background="@color/red"
        android:layout_height="65.0dip">
        <TextView
            android:id="@+id/txt_operate"
            style="@style/MMFontTitleInList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:singleLine="true" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_selector">
        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/img_plan_type"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:src="@mipmap/meishi"/>
            <TextView
                android:id="@+id/waiting_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:background="@color/red"
                android:rotation="325"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:text="@string/un_publish"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/left_layout"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/party_name"
                style="@style/BlackStrongTxt16"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="80dp"
                android:layout_height="wrap_content"
                android:text="郊区小聚"
                android:singleLine="true"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/partyDesc"
                style="@style/BlackTxt14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:text="好久没见大家了，一起坐坐！"
                android:singleLine="true"
                android:gravity="center"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/right_layout"
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp">
                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/description"
                    android:layout_marginRight="3dp"
                    />
                <TextView
                    android:id="@+id/txt_status"
                    style="@style/GrayTxt10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="@string/drafts"
                    />
            </LinearLayout>
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/right" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:text="2015年12月12日 09:00"
                android:textSize="11dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black2" />
    </RelativeLayout>
</com.juju.app.view.SwipeLayoutView>