<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">



    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        />
    <!--标题 -->
    <include  android:id="@+id/layout_party_bar" layout="@layout/layout_title"/>

    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:gravity="center">
    <EditText
        android:id="@+id/txt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_input_border"
        android:layout_marginRight="105dp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:height="40dp"
        android:hint="请输入查询的地址"/>
        <Button
            android:id="@+id/btn_search"
            style="?android:textAppearanceSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:enabled="true"
            android:background="@color/blue"
            android:text="@string/search"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <ImageView
        android:id="@+id/img_address"
        android:layout_centerInParent="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/location_red"
        />

    <TextView
        android:id="@+id/txt_address"
        style="@style/BlackStrongTxt14"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="正在获取位置信息..."
        android:drawableLeft="@mipmap/location_red_mini"
        android:paddingLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/list_item_bk"
        />

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_confirm"
            style="?android:textAppearanceMedium"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:enabled="true"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_marginLeft="10dp"
            style="?android:textAppearanceMedium"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:text="@string/cancel"
            android:enabled="true"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>