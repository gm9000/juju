<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ececec"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="16dp" >

                <com.juju.app.view.groupchat.IMBaseImageView
                    android:id="@+id/user_portrait"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_portrait"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="gm5000"
                    android:textIsSelectable="true"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </RelativeLayout>


            <ScrollView
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/wheel_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" >

                        <TextView
                            android:id="@+id/tv_userNo_label"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="8dp"
                            android:text="聚聚号"
                            android:textColor="#a3a2a8"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_useNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:text="100000001"
                            android:textIsSelectable="true"
                            android:textColor="@color/group_manager_group_title"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/tt_divide_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textColor="#a3a2a8"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" >

                        <TextView
                            android:id="@+id/tv_sex_label"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="8dp"
                            android:text="性别"
                            android:textColor="#a3a2a8"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:text="女"
                            android:textColor="@color/group_manager_group_title"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/tt_divide_line" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/phoneArea"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textColor="#a3a2a8"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" >

                        <TextView
                            android:id="@+id/tv_phone_label"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="8dp"
                            android:text="手机"
                            android:textColor="#a3a2a8"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:text="15812345678"
                            android:singleLine="true"
                            android:textColor="@color/group_manager_group_title"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/tt_divide_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textColor="#a3a2a8"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" >

                        <TextView
                            android:id="@+id/tv_email_label"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="8dp"
                            android:text="邮箱"
                            android:textColor="#a3a2a8"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:text="xxx@juju.com"
                            android:singleLine="true"
                            android:textIsSelectable="true"
                            android:textColor="@color/group_manager_group_title"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/tt_divide_line" />
                    </RelativeLayout>


                    <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="44dp"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:paddingRight="15dp">-->

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_alignParentLeft="true"-->
                            <!--android:paddingLeft="20dp"-->
                            <!--android:layout_centerInParent="true"-->
                            <!--android:text="邮箱"-->
                            <!--android:textColor="#a3a2a8"-->
                            <!--android:textSize="15sp" />-->

                        <!--<TextView-->
                            <!--android:id="@+id/tv_email"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:ellipsize="end"-->
                            <!--android:gravity="right"-->
                            <!--android:singleLine="true"-->
                            <!--android:text="123456"-->
                            <!--android:textColor="@color/group_manager_group_title"-->
                            <!--android:textIsSelectable="true"-->
                            <!--android:textSize="14sp" />-->


                    <!--</RelativeLayout>-->


                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <include  layout="@layout/layout_loading"/>
</merge>