<?xml version="1.0" encoding="utf-8"?>
<com.juju.app.view.SwipeLayoutView
        xmlns:swipe="com.juju.app.view.SwipeLayoutView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:id="@+id/layout_back"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="65.0dip">
        <TextView
            android:id="@+id/txt_operate"
            style="@style/MMFontTitleInList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:singleLine="true" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_selector">
        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true">
            <com.juju.app.view.RoundImageView
                android:id="@+id/creatorImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/head"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="聚龙小子"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_layout"
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp">
                <ImageView
                    android:id="@+id/follow_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/heart"
                    android:layout_marginRight="3dp"
                    />
                <TextView
                    android:id="@+id/txt_status"
                    style="@style/GrayTxt10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="进行中"
                    />
                <ImageView
                    android:id="@+id/img_flag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/flag_red"
                    />
            </LinearLayout>
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/right" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:text="2015年12月12日 09:00"
                android:textSize="11dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content_layout"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/left_layout"
            android:layout_toLeftOf="@+id/right_layout">
            <TextView
                android:id="@+id/party_name"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="郊区小聚"
                android:padding="2dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:singleLine="true"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/partyDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好久没见大家了，一起坐坐！"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/content_layout"
            android:background="@color/black2" />
    </RelativeLayout>

</com.juju.app.view.SwipeLayoutView>
